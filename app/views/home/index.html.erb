<h1>All Users</h1>

<table class="table" >
  <thead class="thead-dark">
    <tr>
      <th>Email</th>
      <th>Invite Status</th>
    </tr>
  </thead>
  <tbody>
   
  <% @users.each do |user| %>
  <tr> 
    <td><%= user.email %></td>
    <td><%= "Pending" %></td>
    <% unless current_user.invites.where(invitee_id: user.id).exists? %>
    <td><%= button_to " send invite ", invites_path , method: :post, params: { invitee_id: user.id }, class:"nav-link" %></td>
    <% end%>    
    </tr> 

    
    <%end%>
 
  </tbody>
</table> 
