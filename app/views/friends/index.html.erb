<p style="color: green"><%= notice %></p>

<h1>Friends List</h1>

<table class="table" >
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name </th>
      <th>Email </th>
      <th>phone</th>
      <th>Twitter</th>
      <th> User ID</th>
      <th colspan ="3">
      
    </tr>
  </thead>
  <tbody>
   
  <% @friends.each do |friend| %>
  <tr> 
    <td><%= friend.first_name %></td>
    <td><%= friend.last_name %></td>
    <td><%= friend.email %></td>
    <td><%= friend.phone %></td>
    <td><%= friend.twitter %></td>
    <td> <%= friend.user_id %> </td>
    <td><%= link_to "Show this friend", friend %></td>
    
    <td><%= link_to "Edit this friend", edit_friend_path(friend) %></td>
    <td><%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %> </td>
    <td><%= link_to "Destroy", friend, methode: :delete, data: { confirm: 'Are You sure!?'} %></td>
    
  </tr> 
    <%end%>
 
  </tbody>
</table> 